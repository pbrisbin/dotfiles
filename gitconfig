# vim: ft=gitconfig
[core]
  editor = vim
  excludesfile = /home/patrick/.gitignore
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[help]
  autocorrect = 1
[alias]
  aa = add --all
  ap = add --patch
  ca = commit --amend
  ci = commit -v
  co = checkout
  dc = diff --cached
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  create-branch = "!f() { git push origin HEAD:refs/heads/$1 && git fetch origin && git checkout $1; }; f"
  delete-branch = "!f() { git push origin :refs/heads/$1 && git branch -d $1; }; f"
  pr = pull-request
  st = status --short --branch
  tg = "!f() { git tag -a -m $1 $1; }; f"
  up = !git fetch origin && git rebase origin/master
  in = !git up -i && git push -f && git checkout master && git pull && git merge -
[merge]
  ff = only
  tool = vimdiff
[push]
  default = current
[diff]
  mnemonicprefix = true

[url "git@github.com:pbrisbin/"]
  pushInsteadOf = "https://github.com/pbrisbin/"
[user]
	email = pbrisbin@gmail.com
	name = patrick brisbin
